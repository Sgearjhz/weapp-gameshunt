/* pages/searchuser/searchuser.wxss */
page{
  height: 100%;  
}
.background{
  position: absolute;
  display: block;
  width: 100%;
  height: 100%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.section {
  margin: 400rpx 0;
}
.input-section {
  position: relative;
  margin: 0;
  background-color: ghostwhite;
  color: black;
  border-radius: 2%;
  overflow: hidden;
  padding: 30rpx;
  align-items: center;
  width:100%;
  height:100%;
  display: flex;
  justify-content: center;
  opacity: 0.9;
}
.search-btn {
  border-radius: 0;
  overflow: hidden;
  display: flex;
  flex:1;
  align-items: center;
  color: ghostwhite;
  font-weight: 600;
  background-color:#4876FF;
  opacity: 0.8;
}
.search-btn-text{
  display: flex;
  flex:1;
  justify-content: center;
  color: ghostwhite;
}
.btns{
display: flex;
position: relative;
flex-direction: row;
}