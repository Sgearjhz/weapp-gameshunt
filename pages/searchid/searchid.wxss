/* pages/searchid/searchid.wxss */
page {
  background-color: #003366;
}
.loading {
  display: flex;
  flex-direction: column;
}
.img {
  position: relative;
  width: 750rpx;
  height: 750rpx;
}
.tittle-img {
  position: absolute;
  width: 750rpx;
  height: 750rpx;
}

.tittle-text {
  position: relative;
  font-size: 50rpx;
  color: #EEEEEE;
  width:100%;
  display: flex;
  justify-content: center;
}

.swiper-view{
  position: relative;
  height: 421.875rpx;
}
.page-body {
  width: 100%;
  flex-grow: 1;
  overflow-x: hidden;
  height: 100%
}
.swiper{
  position: relative;
  height: 100%;
}
.screenshots {
  position: relative;
  display: block;
  width: 100%;
  height: 33.33%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.swiper-item{
  position: absolute;
  display: block;
  width: 750rpx;
  height: 421.875rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.text {
  display: flex;
  position: relative;
  color: #CCCCCC;
  flex-direction: row;
  padding: 30rpx;
}
.text-type {
  position: relative;
  display: flex;
  flex:1;
  flex-direction: column;
}
.text-content {
  position: relative;
  display: flex;
  flex:3;
  flex-direction: column;
}
