/* pages/list/list.wxss */
page{  
    height: 100%;  
}  
.container{  
    background: #f5f5f5;  
    /*position: relative;  */
}  
.section{
  display: flex;  
  flex-direction: row; 
}
.choose{
  display: flex;
  flex:3;  
  flex-direction: column; 
}
.pickers{
display: flex;  
flex-direction: row; 
}
.picker{
 padding: 10rpx 0 10rpx 30rpx ;
 display: flex;
}
.cin{
display: flex;
padding: 10rpx 0 10rpx 30rpx ;
background-color: white;
}
.loginBtn{
  display: flex;
  flex:1;  
  justify-content: center;  
  border-width: 0rpx;
  padding: 15rpx 0 0 0;  
  border-radius: 0;
  color: white;
  background-color: #4876FF;
  font-size: 45rpx;
  font-weight: 600;
}
 /*标题栏目 */
.tit{  
    display: flex;  
    flex-direction: row;  
    justify-content: space-between;  
    height: 80rpx;  
    position: relative;  
}  
