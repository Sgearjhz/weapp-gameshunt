/* pages/showuser/showuser.wxss */
.background{
  position: absolute;
  display: block;
  width: 100%;
  height: 100%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.info {
  position: absolute;
  height: 100%;
  width:100%;
  flex-direction: column;
  align-items: center;
}
.userinfo-level {
  flex-direction: row;
  align-items: center;
  width:100%;
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
}
.level {
  position: absolute;
  left: 100rpx;
  justify-content: space-between;
  color: #e7c533;
}
.rank {
  position: absolute;
  right: 100rpx;
  color: #67c613;
}

.userinfo-ava {
  display:flex;
  flex-direction: column;
  align-items: center;
}
.avatar {
  width: 256rpx;
  height: 256rpx;
  border-radius: 0;
  margin-top: 50rpx;
  align-items: center;
}
.text-background {
  background-color: #000000;
  width:100%;
  opacity: 0.5;
}
.psnid-text {
  width:100%;
  display: flex;
  font-size:50rpx;
  justify-content: center;
  color: #FFFFFF;
}

.userinfo-trophy {
  flex-direction: row;
  align-items: center;
  display: flex;
  justify-content: center;
  background-color:azure;
  opacity: 0.7;
}
.platinum {
  margin: 0 15rpx;
  color: #7a96d1;
}
.gold {
  margin: 0 15rpx;
  color: #cd9a46;
}
.silver {
  margin: 0 15rpx;
  color: #a6a6a6;
}
